<%= form_for @item do |f| %>
  <%= f.label :title  %><br>
  <%= f.text_field :title %>

  <%= label_tag :asking_price %><br>
  <%= number_field_tag :asking_price %>

  <%= f.label :location_id, "Location" %><br>
  <%= f.collection_select :location_id, @locations, :id, :name %>

  <%= f.label :description %><br>
  <%= f.text_area :description %>

  <%= f.label :dimensions  %><br>
  <%= f.text_field :dimensions %>

  <%= f.label :brand  %><br>
  <%= f.text_field :brand %>

  <%= f.label :condition  %><br>
  <%= f.select :condition, Item::CONDITIONS %>

  <%= f.label :purchase_price %>
  <%= f.number_field :purchase_price %>

  <%= f.label :age  %><br>
  <%= f.number_field :age %>

  <%= f.label :category %>
  <%= f.grouped_collection_select :category_id, @rooms, :categories, :name, :id, :name, include_blank: true %>

  <%= label_tag :quantity %>
  <%= number_field_tag :quantity %>

  <%= f.submit "Add Photos" %>
<% end %>
