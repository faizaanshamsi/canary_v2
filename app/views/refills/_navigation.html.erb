<header class="navigation">
  <div class="menu-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://raw.github.com/Magnus-G/Random/master/placeholder_logo_1.png" alt="">
    </a>
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
        <li class="nav-link"><a href="javascript:void(0)">Contact</a></li>
        <% if current_user %>
          <li class="nav-link more"><a href="#" >Profile</a>
            <ul class="submenu">
              <li>
                <%= link_to "Edit Profile", edit_user_registration_path %>  
              </li> 
              <li>
                <%= link_to "My locations", user_locations_path(current_user) %> 
              </li>
            </ul> 
         </li>
        <% end %>
      </ul>
    </div>
      <% unless current_user %>
        <div class="navigation-tools">
          <%= link_to "Sign Up", new_user_registration_path, class: 'sign-up' %>
        </div>
        <div class="navigation-tools">
          <%= link_to "Sign In", new_user_session_path, class: 'sign-up' %>
        </div>
      <% else %>
      <div class="navigation-tools">
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'sign-up' %>
      </div>
        <div class="navigation-tools">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'sign-up' %>
        </div>

      <% end %>
  </div>
</header>

<script>
  $(function() {
    var menu = $('#navigation-menu');
    var menuToggle = $('#js-mobile-menu');
    var signUp = $('.sign-up');

    $(menuToggle).on('click', function(e) {
      e.preventDefault();
      menu.slideToggle(function(){
        if(menu.is(':hidden')) {
          menu.removeAttr('style');
        }
      });
    });

    // underline under the active nav item
    $(".nav .nav-link").click(function() {
      $(".nav .nav-link").each(function() {
        $(this).removeClass("active-nav-item");
      });
      $(this).addClass("active-nav-item");
      $(".nav .more").removeClass("active-nav-item");
    });
  });
</script>
